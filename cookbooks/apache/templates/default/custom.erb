<% if @port != 80 -%>
 Listen <%= @port %>
<% end -%>
<VirtualHost *:<%= @port %>>
 ServerAdmin webmaster@localhost
 DocumentRoot <%= @document_root %>

 <Directory />
  Options FollowSymLinks
  AllowOverride None
 </Directory>
 
 <Directory <%= @document_root %>>
  Options Indexes FollowSymLinks MultiViews
  Allow Override None
  Order allow,deny
  Allow from all
 </Directory>
</VirtualHost>

